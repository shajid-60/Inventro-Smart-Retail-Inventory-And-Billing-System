<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane  xmlns="http://javafx.com/javafx/21.0.6"
             xmlns:fx="http://javafx.com/fxml/1"
             fx:controller="com.shajid.app.inventro.controller.OrdersController"
             style="-fx-background-color: linear-gradient(from 25% 25% to 100% 100%, #081822, #0f3a4e);">

    <top>
        <HBox spacing="10"
              style="-fx-padding: 20; -fx-background-color: radial-gradient(center 50% 10%, radius 90%, #00ffee33, transparent 80%);">
            <Label text="Inventro" textFill="#00f2ea">
                <font><Font name="System Bold" size="26"/></font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Stock Orders" textFill="white">
                <font><Font size="20"/></font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="14"
              style="-fx-padding: 20; -fx-background-color: radial-gradient(center 50% 10%, radius 90%, #00ffee33, transparent 80%);">

            <HBox spacing="10">
                <TextField fx:id="searchField"
                           promptText="Search orders..."
                           style="-fx-background-color:#223344;
                                  -fx-text-fill:white;
                                  -fx-prompt-text-fill:#88ffffff;
                                  -fx-background-radius:12;
                                  -fx-padding:10;"/>

                <ComboBox fx:id="statusFilter"
                          promptText="Filter by status"
                          style="-fx-background-color:#223344;
                                 -fx-text-fill:white;
                                 -fx-prompt-text-fill:#88ffffff;
                                 -fx-background-radius:12;
                                 -fx-padding:6;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Import from PDF" onAction="#onImportFromPdf"/>
            </HBox>

            <HBox spacing="10">
                <TextField fx:id="addSupplierField" promptText="Supplier" />
                <TextField fx:id="addDateField" promptText="Date" />
                <TextField fx:id="addTotalField" promptText="Total" />
                <TextField fx:id="addStatusField" promptText="Status" />
                <Button text="Add Order" onAction="#onNewOrder" />
                <Button text="Save" onAction="#onSaveOrders" />
            </HBox>

            <TableView fx:id="ordersTable"
                       VBox.vgrow="ALWAYS"
                       columnResizePolicy="CONSTRAINED_RESIZE_POLICY_ALL_COLUMNS"
                       style="-fx-background-color:#FFFFFF;
                              -fx-background-radius:8;
                              -fx-border-radius:8;">
                <columns>
                    <TableColumn fx:id="colId" text="Order \\#" prefWidth="80"/>
                    <TableColumn fx:id="colSupplier" text="Supplier" prefWidth="240"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="160"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="120"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="140"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Mark as Received" onAction="#onMarkReceived"/>
                <Button text="Cancel Order" onAction="#onCancelOrder"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Back to Dashboard" onAction="#goToDashboard"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
