<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.shajid.app.inventro.RegisterController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f0f4f7;">

    <!-- Top: App Title -->
    <top>
        <Label text="Inventro - Customer Registration"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #333;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- Center: Input Fields -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <GridPane hgap="15" vgap="20">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Name:" style="-fx-font-size: 18px;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="regName" promptText="Enter full name"
                           style="-fx-font-size: 16px; -fx-pref-width: 400px;"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Age:" style="-fx-font-size: 18px;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="regAge" promptText="Enter age"
                           style="-fx-font-size: 16px; -fx-pref-width: 400px;"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Phone:" style="-fx-font-size: 18px;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="regPhone" promptText="Enter phone number"
                           style="-fx-font-size: 16px; -fx-pref-width: 400px;"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Address:" style="-fx-font-size: 18px;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="regAddress" promptText="Enter address"
                           style="-fx-font-size: 16px; -fx-pref-width: 400px;"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="User ID:" style="-fx-font-size: 18px;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="regUserId" promptText="Enter ID"
                           style="-fx-font-size: 16px; -fx-pref-width: 400px;"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Password:" style="-fx-font-size: 18px;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <PasswordField fx:id="regPassword" promptText="Enter Password"
                               style="-fx-font-size: 16px; -fx-pref-width: 400px;"
                               GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Button text="Register" onAction="#handleRegister"
                        style="-fx-font-size: 18px; -fx-padding: 10 50 10 50; -fx-background-color: #4caf50; -fx-text-fill: white;"
                        GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <Button text="Back to Login" onAction="#goToLogin"
                        style="-fx-font-size: 18px; -fx-padding: 10 50 10 50;"
                        GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </center>

    <!-- Bottom: Footer -->
    <bottom>
        <Label text="Â© 2025 Inventro. All rights reserved."
               style="-fx-font-size: 14px;"
               BorderPane.alignment="CENTER"/>
    </bottom>

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
</BorderPane>
